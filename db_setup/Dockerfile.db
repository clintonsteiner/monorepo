FROM postgres:16-alpine

# Environment variables for default user and database
ENV POSTGRES_USER=ercot_user \
    POSTGRES_PASSWORD=ercot_pass \
    POSTGRES_DB=ercot_db

# Copy SQL initialization files
# PostgreSQL auto-executes .sql files in /docker-entrypoint-initdb.d/ (alphabetically)
COPY db_setup/sql/*.sql /docker-entrypoint-initdb.d/

EXPOSE 5432
